@model CESI_CSharp_WebApp.Models.User

@{
    ViewData["Title"] = "Utilisateurs > Détails d'un utilisateur";
}

<h1>Utilisateurs</h1>

<div>
    <h4>Détail de l'utilisateur N°@Html.DisplayFor(model => model.Id)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <!--@Html.DisplayNameFor(model => model.Id)-->
            Identifiant
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            <!--@@Html.DisplayNameFor(model => model.LastName)-->
            Nom
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            <!--@@Html.DisplayNameFor(model => model.FirstName)-->
            Prénom
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Éditer l'utilisateur", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Revenir à la liste</a>
</div>
